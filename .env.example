# Google AI API Key (required for Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_api_key_here

# Optional: Port for local development
PORT=8000

# Cache-Control Header Configuration (optional)
# Enable or disable Cache-Control headers (default: true)
# When enabled, responses include "Cache-Control: public, max-age=CACHE_TTL"
# When disabled, responses include "Cache-Control: no-cache, no-store, must-revalidate"
CACHE_ENABLED=true
# Cache TTL (Time To Live) in seconds for Cache-Control max-age (default: 3600 = 1 hour)
CACHE_TTL=3600

# Media Generation Password Protection (optional)
# When set, image and video generation endpoints require authentication
# Use Bearer token authentication: "Authorization: Bearer your_password_here"
# If not set, media generation is open (no authentication required)
MEDIA_PASSWORD=
